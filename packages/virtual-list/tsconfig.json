{
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "./dist",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "jsx": "react",
    "moduleResolution": "node",
    "importHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "module": "esnext",
    "sourceMap": true,
    "target": "esnext",
    "strict": true,
    "lib": ["dom", "esnext", "es2015.promise"]
  }
}
